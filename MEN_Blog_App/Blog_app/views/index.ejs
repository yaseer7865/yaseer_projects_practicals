<%- include('partials/header') %>

<main class="container mt-5">
  <h2 class="mb-4">Recent Posts</h2>

  <% if (posts.length === 0) { %>
    <p class="text-muted">No posts yet. <a href="/posts/new">Create one!</a></p>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% posts.forEach(post => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= post.imageUrl || 'https://via.placeholder.com/600x300?text=No+Image' %>" class="card-img-top" alt="Post Image" style="height:200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text text-truncate"><%= post.body %></p>
              <a href="/posts/<%= post._id %>" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
