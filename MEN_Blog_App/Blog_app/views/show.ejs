      <form action="/posts/<%= post._id %>/delete" method="POST" onsubmit="return confirm('Delete this post?');">
  <button class="btn btn-danger">Delete</button>
</form>

<a href="/posts/<%= post._id %>/edit" class="btn btn-warning">Edit</a>

    </div>
  </div>
</main>

